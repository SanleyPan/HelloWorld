<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="148.9dp"
        android:layout_height="30.3dp"
        android:layout_marginTop="88dp"
        android:src="@drawable/fill_1"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/username"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="77.7dp"
        android:textSize="12sp"
        android:hint="Username"
        android:textColor="#e4e4e4"
        android:textFontWeight="12"
        android:paddingStart="18dp"
        android:background="@drawable/edit_bg_rounded"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/logo" />

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:paddingStart="18dp"
        android:textSize="12sp"
        android:background="@drawable/edit_bg_rounded"
        android:hint="Password"
        android:textColor="#e4e4e4"
        android:textFontWeight="12"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/username" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:buttonTint="#e4e4e4"
        android:text="Remeber me"
        android:fontFamily="sans-serif"
        android:textSize="12sp"
        android:textColor="#222222"
        app:layout_constraintStart_toStartOf="@id/password"
        app:layout_constraintTop_toBottomOf="@id/password" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="37.5dp"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:fontFamily="sans-serif"
        android:text="Forgot passowrd?"
        android:textColor="#222222"
        app:layout_constraintStart_toEndOf="@id/checkbox"
        app:layout_constraintTop_toBottomOf="@id/password" />

    <android.widget.Button
        android:id="@+id/login"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/button_bg_rounded_corners"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/checkbox"
        android:text="@string/login"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"/>

    <TextView
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26.5dp"
        android:text="or connect with"
        android:textColor="#b2b2b2"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login" />

    <ImageButton
        android:id="@+id/facebook"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/fb"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/connect"
        android:text="@string/login"
        app:layout_constraintStart_toStartOf="@id/login"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"/>

    <ImageButton
        android:id="@+id/twitter"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/tw"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/connect"
        android:text="@string/login"
        app:layout_constraintEnd_toEndOf="@id/login"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"/>

    <android.widget.Button
        android:id="@+id/signup"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textAllCaps="false"
        android:background="@drawable/sign_up_corner"
        android:layout_marginTop="85dp"
        android:textColor="#1f4ba5"
        app:layout_constraintTop_toBottomOf="@id/facebook"
        android:text="@string/signupWithEmail"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>